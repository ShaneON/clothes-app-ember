{{page-header
  header=header}}
<div local-class="body">
  <div local-class="content">
    {{admin-bar
      text="Click here to write a new blog post"
      buttonText="New blog"
      buttonClicked=(action send "newBlogPost")}}
    {{#each model as |blogPost|}}
      {{blog-post-item
        editButtonClicked=(action send "editBlogPost")
        deleteButtonClicked=(action send "deleteBlogPost")
        blogPost=blogPost}}
    {{/each}}
  </div>
</div>
{{outlet}}
